<!DOCTYPE html>
<html lang="en">
	<head>
    	<meta charset="utf-8">
    	<meta name="description" content="This is where your description goes">
    	<meta name="keywords" content="one, two, three">

		<title>Title in the tab</title>

		<!-- external CSS link -->
		<!-- <link rel="stylesheet" href="css/normalize.css">-->
		<link rel="stylesheet" href="style.css"> 
	</head>
	<body>
		<h1>Inventory</h1>

		<!-- add new part to inventory form -->
		<form action="/inventory" method="POST">

			<legend>add new partnumber</legend>
				<input type="text" placeholder="part number"  name="part" id="newPart" required>

				<input type="text" placeholder="engine model" name="model" id="newModel" required >

				<input type="number"  name="quantity" id="newQuantity" min="0" max="20"  value="0">
				<button type="submit"> send</button>	
		</form>




		<section>
			<h3>inventory numbers:</h3>
			<button id="update" class="update_inventory">Update All Inventory</button>
		</section>
		
		<!-- inventory list -->
		<ol id="inventory">
			<% for(let i =0; i<inventory.length; i++) {%>

				<%if(inventory[i].instock > 7){%>
					<li class="partnumber good-stock" >
				<%}else if(inventory[i].instock >= 4 ){%>
					<li class="partnumber medium-stock">
				<%}else{%>
					<li class="partnumber low-stock">
				<%} %>


				<!-- partnumber entry into DOM -->
					<section class="part-info" >
						<!-- part number -->
						<span class="part_id"><%= inventory[i].partnumber %></span>

						<!-- engine model  -->
						<span class="model_id"><%= inventory[i].model %></span>

						<!-- quantity changed requested -->
						<input class="quantity" type="number" value=<%= inventory[i].instock %>>

						<!-- current quantity in api -->
						<span>instock: <span class="instock"><%= inventory[i].instock %></span> </span>
						</input>
						
					</section>

					<section class="delete-sect">
						<details>
							<summary>delete</summary>
							<button data-button="delete-button">
								delete
							</button>
						</details>		
					</section>

					<section class="controls">
						<section class="update">
							<button data-button="add-button">
								increase amount
							</button>
					
							<button data-button="reduce-button">
								reduce amount
							</button>
						</section>
					
						<section class="update">
							<button data-button="update-button">
								update
							</button>
						</section>
					</section>
					
				</li>
				

			<% } %>
		</ol> 
		<!-- end of part listing -->
			
		

		<script  src="main.js"></script>
	</body>
</html>
