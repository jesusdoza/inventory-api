const mongoose = require('mongoose')



const UserSchema = new mongoose.Schema({
    userId:{
        type:String,
        required:true,
        unique: true,
    },
    password:{
        type:String,
        required:true,
    },
    createdAt:{
        type:Date,
        defaul:Date.now(),
        immutable:true,
    },
    role:{
        type:String,
        default:'basic'
    }
    
},
{
    collection:"users"
}
)

module.exports  = mongoose.model('User', UserSchema)